<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_fournisseur_tree" model="ir.ui.view">
        <field name="name">patrimoine.fournisseur.tree</field>
        <field name="model">patrimoine.fournisseur</field>
        <field name="arch" type="xml">
            <tree>
                <field name="code"/>
                <field name="denomination"/>
                <field name="tel"/>
                <field name="email"/>
            </tree>
        </field>
    </record>

    <record id="view_fournisseur_form" model="ir.ui.view">
        <field name="name">patrimoine.fournisseur.form</field>
        <field name="model">patrimoine.fournisseur</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="denomination"/>
                            <field name="adresse"/>
                        </group>
                        <group>
                            <field name="tel"/>
                            <field name="fax"/>
                            <field name="email"/>
                        </group>
                    </group>
                    <group string="Responsable">
                        <group>
                            <field name="nom_resp"/>
                            <field name="prenom_resp"/>
                        </group>
                        <group>
                            <field name="gsm1"/>
                            <field name="gsm2"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
